# Exchange Configuration
EXCHANGE=binance
API_KEY=your_api_key_here
API_SECRET=your_api_secret_here
SANDBOX_MODE=false

# Trading Pair Configuration
BASE_ASSET=ETH
QUOTE_ASSET=USDT
TRADING_PAIR=ETH/USDT

# Bot Configuration
DRY_RUN=true

# Volume Strategy Configuration
TARGET_VOLUME_USDT_PER_HOUR=100.0
PRICE_WALK_DIRECTION=sideways
MAX_PRICE_DEVIATION=0.01
ORDER_FREQUENCY=60

# Order Sizing Configuration
MIN_ORDER_RATIO=0.001
MAX_ORDER_RATIO=0.005
SIZE_RANDOMIZATION=0.3

# Timing Configuration
TIMING_RANDOMIZATION=0.5
BURST_PROBABILITY=0.05
QUIET_PROBABILITY=0.15

# Safety Configuration
MIN_ORDER_VALUE_USDT=5.0
MAX_SPREAD_THRESHOLD=0.05
CANCEL_PREVIOUS_ORDERS=true

# Docker-specific (optional)
PYTHONUNBUFFERED=1